{
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/lib/docker/containers/*/*.log",
            "log_group_name": "/${env}/${project}/${tier}/${region}/${service_name}/app",
            "log_stream_name": "{instance_id}-app",
            "timezone": "Local"
          },
          {
            "file_path": "/var/log/docker.log",
            "log_group_name": "/${env}/${project}/${tier}/${region}/system/docker",
            "log_stream_name": "{instance_id}-docker",
            "timezone": "Local"
          },
          {
            "file_path": "/var/log/messages",
            "log_group_name": "/${env}/${project}/${tier}/${region}/system/messages",
            "log_stream_name": "{instance_id}-messages",
            "timezone": "Local"
          },
          {
            "file_path": "/var/log/secure",
            "log_group_name": "/${env}/${project}/${tier}/${region}/system/secure",
            "log_stream_name": "{instance_id}-secure",
            "timezone": "Local"
          },
          {
            "file_path": "/var/log/cloud-init-output.log",
            "log_group_name": "/${env}/${project}/${tier}/${region}/system/cloud-init",
            "log_stream_name": "{instance_id}-cloud-init",
            "timezone": "Local"
          },
          {
            "file_path": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
            "log_group_name": "/${env}/${project}/${tier}/${region}/system/cwagent",
            "log_stream_name": "{instance_id}-cwagent",
            "timezone": "Local"
          }
        ]
      }
    }
  }
}
